# This template is run by `chezmoi init` and creates a .chezmoi.toml config file

# Prompt user for their email and store it in data

{{- $email := "" -}}
{{- if (hasKey . "email") -}}
{{-     $email = .email -}}
{{- else -}}
{{-     $email = promptString "email" -}}
{{- end }}

[data]
  email = {{ $email | quote }}

{{ if eq .chezmoi.hostname "snwolf-laptop" }}
[keypassxc]
    database = "/Users/snwolf/Dropbox/.keepass/personal_passwords.kdbx"
{{- end }}
