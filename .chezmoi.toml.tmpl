# This template is run by `chezmoi init` and creates a .chezmoi.toml config file

# Prompt user for their email and store it in data

{{- $email := "" -}}
{{- if (hasKey . "email") -}}
{{-     $email = .email -}}
{{- else -}}
{{-     $email = promptString "email" -}}
{{- end }}

[data]
  email = {{ $email | quote }}
