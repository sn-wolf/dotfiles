{
    // Sets color palette to Drcula theme colors
    "workbench.colorTheme": "Dracula",
    // Hide the minimap on the right
    "editor.minimap.enabled": false,
    // Code folding settings
    "editor.showFoldingControls": "mouseover",
    "editor.folding": true,
    "editor.foldingStrategy": "auto",
    "editor.formatOnSaveMode": "modificationsIfAvailable",
    "editor.detectIndentation": false,
    "editor.cursorBlinking": "smooth",
    "editor.formatOnSave": true,
    "keyboard.touchbar.enabled": false,
    "[python]": {
        "editor.defaultFormatter": "black",
        "editor.tabSize": 4
    },
    "python.formatting.provider": "black",
    "python.formatting.blackPath": "black",
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Args": [
        "max-line-length=88 extend-ignore=E203"
    ],
    "python.languageServer": "Jedi",
    "python.linting.mypyEnabled": true,
    "python.experiments.enabled": false,
    "python.pythonPath": "/Users/snwolf/.pyenv/versions/3.9.9/bin/python",
    // Shell scripting settings
    "[shellscript]": {
        "editor.tabSize": 2
    },
    "shellcheck.executablePath": "/usr/local/bin/shellcheck",
    "shellcheck.run": "onSave",
    // VimL settings
    "[viml]": {
        "editor.tabSize": 2
    },
    // TabNine
    "tabnine.experimentalAutoImports": true,
    // Terminal settings
    "terminal.integrated.fontFamily": "Source Code Pro for Powerline",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.external.osxExec": "iTerm.app",
    "editor.fontFamily": "'SauceCodePro Nerd Font Mono'",
    "editor.fontSize": 14
}
