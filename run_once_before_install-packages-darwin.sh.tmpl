{{- if (eq .chezmoi.os "darwin") -}}
#!/usr/bin/env bash

set -eufo pipefail

{{ $taps := list
    "homebrew/core"
    "homebrew/bundle"
    "homebrew/cask"
    "homebrew/cask-fonts" -}}
{{ $formulae := list
    "curl"
    "dockutil"
    "ffmpeg"
    "gh"
    "git"
    "gnupg"
    "mas"
    "pandoc"
    "pyenv"
    "shellcheck"
    "trash"
    "tree"
    "wget" -}}
{{ $casks := list
    "iterm2"
    "vlc"
    "vscodium" -}}

{{ if eq .chezmoi.arch "amd64" -}}
{{  $formulae = concat $formulae (list
        "shellcheck") -}}
{{  $casks = concat $casks (list
        "virtualbox") -}}
{{ end -}}

{{ if .personal -}}
{{  $casks = concat $casks (list
        "audacity"
        "avidemux"
        "brave-browser"
        "digikam"
        "dropbox"
        "firefox"
        "gimp"
        "inkscape"
        "joplin"
        "karabiner-elements"
        "keepassxc"
        "macfuse"
        "mendeley"
        "musescore"
        "praat"
        "signal"
        "skype"
        "spotify"
        "thunderbird"
        "tor-browser"
        "veracrypt"
        "zoom") -}}
{{ end -}}

# Need to symlink /Applications/VeraCrypt.app/Contents/MacOS/VeraCrypt to /usr/local/bin/veracrypt after install

brew bundle --no-lock --file=/dev/stdin <<EOF
{{ range ($formulae | sortAlpha | uniq) -}}
brew "{{ . }}"
{{ end -}}
{{ range ($casks | sortAlpha | uniq) -}}
cask "{{ . }}"
{{ end -}}
EOF
{{ end -}}
