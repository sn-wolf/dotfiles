# Root EditorConfig
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{md,py}]
charset = utf-8

[*.py]
indent_style = space
indent_size = 4
max_line_length = 79

[*.sh]
indent_style = space
indent_size = 2

